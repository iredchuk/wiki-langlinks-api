{
  "name": "wiki-langlinks-api",
  "version": "0.2.0",
  "description": "Prototype of an API to show translation into several languages at once using MediaWiki API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "watch": "nodemon -x npm start",
    "pretest": "npm run lint",
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "ci": "npm run test",
    "lint": "standard",
    "dock": "docker build -t wiki-langlinks-api .",
    "start-docker": "docker run --rm -p 3000:3000 --name wiki-langlinks-api wiki-langlinks-api"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iredchuk/wiki-langlinks-api.git"
  },
  "keywords": [
    "wiki",
    "mediawiki",
    "languages",
    "translation"
  ],
  "author": "iredchuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iredchuk/wiki-langlinks-api/issues"
  },
  "homepage": "https://github.com/iredchuk/wiki-langlinks-api#readme",
  "dependencies": {
    "kcors": "~2.2.1",
    "koa": "~2.3.0",
    "koa-route": "~3.2.0",
    "superagent": "~3.5.2"
  },
  "devDependencies": {
    "jest": "~20.0.4",
    "nodemon": "~1.11.0",
    "standard": "~10.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node"
  },
  "standard": {
    "env": "jest"
  }
}
